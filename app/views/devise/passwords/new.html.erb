<div class="container loginP">
 
 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>¿Olvidaste tu contraseña?</h2>

  <div class="field">
    <%= f.label :email, "Correo electrónico" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar instrucciones para restablecer la contraseña" %>
  </div>
  <br>
  <%= render "devise/shared/links" %>
<% end %>

</div>
